@page
@model _245Final.GamesPage.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>@Model.Games.Title</h4>
    <hr />
    <div class="game-info-container">
        <div class="game-info col-md-8">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Games.ReleaseDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Games.ReleaseDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Games.Genre)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => @Model.GenreName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Games.Platform)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => @Model.PlatformName)
                </dd>
                <dt class="col-sm-2">
                    Manufacturer
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => @Model.Manufacturer)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Games.Price)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Games.Price)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Games.Rating)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Games.Rating)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Games.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Games.Description)
                </dd>
            </dl>
        </div>
        <div class="game-image col-md-4">
            <img class="img-big" src="~/images/@Model.Games.Picture" alt="Pic" width="100%" height="auto">
        </div>
    </div>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-page="./Edit" asp-route-id="@Model.Games?.ID">Edit</a>
        <span> | </span>
    }
    <a asp-page="./Index">Back to List</a>
</div>
