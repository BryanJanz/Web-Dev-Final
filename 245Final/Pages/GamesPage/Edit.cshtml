@page
@model _245Final.GamesPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Games</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Games.ID" />
            <div class="form-group">
                <label asp-for="Games.Title" class="control-label"></label>
                <input asp-for="Games.Title" class="form-control" />
                <span asp-validation-for="Games.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Games.ReleaseDate" class="control-label"></label>
                <input asp-for="Games.ReleaseDate" class="form-control" />
                <span asp-validation-for="Games.ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Games.Genre" class="control-label"></label>
                <select asp-for="Games.Genre" class="form-control form-select">
                    <option value=""></option>
                    @foreach (var genre in Model.Genres)
                    {
                        <option value="@genre.ID">@genre.Genre</option>
                    }
                </select>
                <span asp-validation-for="Games.Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Games.Platform" class="control-label"></label>
                <select asp-for="Games.Platform" class="form-control form-select">
                    <option value=""></option>
                    @foreach (var plat in Model.Platforms)
                    {
                        <option value="@plat.ID">@plat.SystemName</option>
                    }
                </select>
                <span asp-validation-for="Games.Platform" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Games.Price" class="control-label"></label>
                <input asp-for="Games.Price" class="form-control" />
                <span asp-validation-for="Games.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Games.Picture" class="control-label"></label>
                <input asp-for="Games.Picture" class="form-control" />
                <span asp-validation-for="Games.Picture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Games.Rating" class="control-label"></label>
                <input asp-for="Games.Rating" class="form-control" />
                <span asp-validation-for="Games.Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Games.Description" class="control-label"></label>
                <textarea asp-for="Games.Description" class="form-control" placeholder="Description Goes Here" rows="4" ></textarea>
                <span asp-validation-for="Games.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
